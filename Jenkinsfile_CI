pipeline {
  agent any

  tools {
    nodejs 'nodejs23'
  }

  environment {
    SCANNER_HOME = tool 'sonar-scanner'
    DOCKER_USERNAME = 'rajatrulaniya'
    DOCKER_BACKEND_REPO = 'devsecops-backend'
    DOCKER_FRONTEND_REPO = 'devsecops-frontend'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scmGit(
          branches: [[name: '*/dev']],
          extensions: [],
          userRemoteConfigs: [
            [url: 'https://github.com/Rajat-Rulaniya/devsecops-end-to-end.git']
          ]
        )
      }
    }

    stage('Frontend Syntax Validation') {
      steps {
        dir('client') {
          sh 'find . -name "*.js" -exec node --check {} +'
        }
      }
    }

    stage('Backend Syntax Validation') {
      steps {
        dir('api') {
          sh 'find . -name "*.js" -exec node --check {} +'
        }
      }
    }

    stage('GitLeaks Scan') {
      steps {
        script {
          sh 'gitleaks detect -v --source ./client --exit-code 1'
          sh 'gitleaks detect -v --source ./api --exit-code 1'
        }
      }
    }

    stage('SonarQube Analysis') {
      steps {
        withSonarQubeEnv('sonar-server') {
          sh '''
            $SCANNER_HOME/bin/sonar-scanner \
            -Dsonar.projectName=NodeJS-Project \
            -Dsonar.projectKey=NodeJS-Project
          '''
        }
      }
    }

    stage('Quality Gate Check') {
      steps {
        timeout(time: 1, unit: 'HOURS') {
          waitForQualityGate abortPipeline: false, credentialsId: 'Sonar-token'
        }
      }
    }

    stage('Trivy FS Scan') {
      steps {
        sh '''
          curl -sSL \
            https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/html.tpl \
            -o /tmp/trivy-html.tpl

          trivy fs \
            --format template \
            --template "@/tmp/trivy-html.tpl" \
            -o fs-report.html .
        '''

        archiveArtifacts artifacts: 'fs-report.html', followSymlinks: false
      }
    }

    stage('Build-Tag & Push Backend Docker Image') {
      steps {
        withDockerRegistry(credentialsId: 'docker-creds') {
          dir('api') {
            sh """
              docker build \
                -t ${DOCKER_USERNAME}/${DOCKER_BACKEND_REPO}:v1-build-${env.BUILD_NUMBER} \
                -t ${DOCKER_USERNAME}/${DOCKER_BACKEND_REPO}:latest \
                .
              
              docker push ${DOCKER_USERNAME}/${DOCKER_BACKEND_REPO}:v1-build-${env.BUILD_NUMBER}
              docker push ${DOCKER_USERNAME}/${DOCKER_BACKEND_REPO}:latest
            """
          }
        }
      }
    }

    stage('Build-Tag & Push Frontend Docker Image') {
      steps {
        withDockerRegistry(credentialsId: 'docker-creds') {
          dir('client') {
            sh """
              docker build \
                -t ${DOCKER_USERNAME}/${DOCKER_FRONTEND_REPO}:v1-build-${env.BUILD_NUMBER} \
                -t ${DOCKER_USERNAME}/${DOCKER_FRONTEND_REPO}:latest \
                .
              
              docker push ${DOCKER_USERNAME}/${DOCKER_FRONTEND_REPO}:v1-build-${env.BUILD_NUMBER}
              docker push ${DOCKER_USERNAME}/${DOCKER_FRONTEND_REPO}:latest
            """
          }
        }
      }
    }
  }
}
